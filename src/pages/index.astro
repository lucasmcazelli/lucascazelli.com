---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import Hr from "@/components/Hr.astro";
import KnowledgeGraph from "@/components/KnowledgeGraph.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
// Filter out draft posts
const publishedPosts = sortedPosts.filter(post => !post.data.draft);
const featuredPosts = publishedPosts.filter(({ data }) => data.featured);
const recentPosts = publishedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index">
    <section id="hero" class="pt-8 pb-6">
      <h1 class="my-4 inline-block text-4xl font-bold sm:my-8 sm:text-5xl">
        Lucas M. Cazelli
      </h1>
      <a
        target="_blank"
        href="/rss.xml"
        class="inline-block"
        aria-label="rss feed"
        title="RSS Feed"
      >
        <IconRss
          width={20}
          height={20}
          class="scale-125 stroke-accent stroke-3 rtl:-rotate-90"
        />
        <span class="sr-only">RSS Feed</span>
      </a>

      <div class="space-y-4">
        <p class="text-lg leading-relaxed">
          Exploring how the brain makes product decisions. Insights on cognitive psychology, 
          statistical thinking, and NeuroAI applications in product development. 
          Currently building synthetic audiences at North AI.
        </p>
        
        <div>
          <h3 class="text-lg font-semibold mb-3 text-accent">Focus Areas</h3>
          <ul class="space-y-2 text-muted-foreground">
            <li class="flex items-start">
              <span class="text-accent mr-2">•</span>
              <span>Cognitive science applications in product management</span>
            </li>
            <li class="flex items-start">
              <span class="text-accent mr-2">•</span>
              <span>Statistical methods for user behavior analysis</span>
            </li>
            <li class="flex items-start">
              <span class="text-accent mr-2">•</span>
              <span>Neuroscience-inspired AI for video analytics</span>
            </li>
            <li class="flex items-start">
              <span class="text-accent mr-2">•</span>
              <span>Deep technical implementations of research papers</span>
            </li>
            <li class="flex items-start">
              <span class="text-accent mr-2">•</span>
              <span>Product discovery and experimentation frameworks</span>
            </li>
          </ul>
        </div>
      </div>
      {
        // only display if at least one social link is enabled
        SOCIALS.length > 0 && (
          <div class="mt-4 flex flex-col sm:flex-row sm:items-center">
            <div class="me-2 mb-1 whitespace-nowrap sm:mb-0">Social Links:</div>
            <Socials />
          </div>
        )
      }
    </section>

    <Hr />

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured" class="pt-12 pb-6">
            <h2 class="text-2xl font-semibold tracking-wide">Featured</h2>
            <ul>
              {featuredPosts.map(data => (
                <Card variant="h3" {...data} />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">Recent Posts</h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    <!-- Knowledge Graph Section -->
    <Hr />
    <section id="knowledge-graph" class="pt-12 pb-6">
      <div class="mb-6">
        <h2 class="text-2xl font-semibold tracking-wide mb-2">Knowledge Graph</h2>
        <p class="text-muted-foreground mb-4">
          Explore the connections between ideas and concepts in an interactive visualization.
        </p>
        <LinkButton href="/graph/" class="mb-6">
          View Full Graph
          <IconArrowRight class="ml-1 inline-block h-4 w-4" />
        </LinkButton>
      </div>
      
      <!-- Mini Knowledge Graph -->
      <div class="bg-muted/20 rounded-lg border border-muted p-6">
        <KnowledgeGraph 
          posts={publishedPosts.map(post => ({
            slug: post.id,
            data: {
              title: post.data.title,
              tags: post.data.tags || [],
              category: post.data.category,
              importance: post.data.importance || 5,
              connections: post.data.connections || [],
              backlinks: post.data.backlinks || [],
              relatedPosts: post.data.relatedPosts || [],
              cluster: post.data.cluster,
            }
          }))} 
          width={600} 
          height={400} 
        />
      </div>
    </section>

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        All Posts
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
